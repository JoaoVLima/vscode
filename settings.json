{
    "editor.formatOnSave": true,
    "editor.mouseWheelZoom": true,
    "editor.autoIndentOnPaste": true,
    "workbench.colorTheme": "JetBrains New Dark",
    "workbench.preferredDarkColorTheme": "JetBrains New Dark",
    "workbench.colorCustomizations": {
        "[JetBrains New Dark]": {
            "editor.background": "#1E1F22",
            "terminal.background": "#1E1F22",
            "menu.selectionBackground": "#007ACC",
            "button.background": "#007ACC",
            "menu.background": "#2b2d30",
            "panel.background": "#2b2d30",
            "sideBar.background": "#2b2d30",
            "activityBar.background": "#2b2d30",
            "statusBar.background": "#2b2d30",
            "titleBar.activeBackground": "#2b2d30",
            "titleBar.inactiveBackground": "#2b2d30"
        },
    },
    "prettier.tabWidth": 4,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.stickyScroll.enabled": false,
    "editor.indentSize": "tabSize",
    "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
    "git.confirmSync": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "editor.fontFamily": "'Droid Sans Mono', 'Noto Sans Mono', 'CaskaydiaCove Nerd Font', 'monospace', monospace"
}
